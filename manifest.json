{
    "name": "Close It All",
    "description": "Automatically close Zoom, Slack, and Figma and tabs.",
    "version": "1.0.1",
    "manifest_version": 3,
    "icons": {
        "16": "assets/icon-16.png",
        "48": "assets/icon-48.png",
        "128": "assets/icon-128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "*://*.zoom.us/j/*",
                "*://*.zoomgov.us/j/*",
                "*://zoom.us/j/*",
                "*://zoomgov.us/j/*",
                "*://*.zoom.us/s/*",
                "*://*.zoomgov.us/s/*",
                "*://zoom.us/s/*",
                "*://zoomgov.us/s/*",
                "*://*.zoom.us/postattendee*",
                "*://*.zoomgov.us/postattendee*",
                "*://zoom.us/postattendee*",
                "*://zoomgov.us/postattendee*",
                "*://*.zoom.us/wc/leave*",
                "*://*.zoomgov.us/wc/leave*",
                "*://zoom.us/wc/leave*",
                "*://zoomgov.us/wc/leave*",
                "*://*.slack.com/archives/*",
                "*://*.slack-gov.com/archives/*",
                "*://*.slack.com/huddle/*",
                "*://*.slack-gov.com/huddle/*",
                "*://*.slack.com/team/*",
                "*://*.slack-gov.com/team/*",
                "*://*.figma.com/file/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}